{
  "kind": "collectionType",
  "collectionName": "board_games",
  "info": {
    "singularName": "board-game",
    "pluralName": "board-games",
    "displayName": "Board Game",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "game": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::game.game"
    },
    "players": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::player.player"
    },
    "time": {
      "type": "time",
      "default": "00:00"
    },
    "notes": {
      "type": "text"
    },
    "mission": {
      "type": "dynamiczone",
      "components": [
        "mission.arkham",
        "mission.eldritch",
        "mission.times",
        "mission.zombicide"
      ],
      "min": 1,
      "max": 1,
      "required": true
    },
    "duration": {
      "type": "decimal"
    }
  }
}
